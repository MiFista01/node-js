<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
        <script src="../scripts/trash.js"></script>
    </head>
    <body class="">
        <div class="main">
            <header>
                <%- include('../partials/header'); %>
            </header>
            <div class="trash_objs">
                <main >
                    <h1>Deleted games</h1>
                    <% games.forEach(game => { %>
                        <div class="game">
                            <div class="buttons_block hide">
                                <img src="/imgs/restore.png" id="<%= game.prime.id %>" obj="game" alt="" class="restore">
                                <img src="/imgs/delete.png" id="<%= game.prime.id %>" obj="game" alt="" class="full_delete">
                            </div>
                            <div class="game_img" style="background-image: url(<%=game.prime.img%>);">
    
                            </div>
                            
                            <div class="info">
                                <h2><%=game.prime.title%></h2>
                                <p><span>Publieshed date:</span> <%=game.prime.published_date%></p>
                                <p><span>Issuer:</span> <%=game.prime.issuer%></p>
                                <p><span>Developer:</span> <%=game.prime.developer%></p>
                                <p><span>Genres:</span> 
                                    <% game.genres.forEach(genre => { %>
                                        <% if (genre!= game.genres[game.genres.length-1]) { %>
                                            <%=genre%>/
                                        <% } else{%>
                                            <%=genre%>
                                        <%}%>
                                <% }) %></p>
                                <p><span>Platforms:</span> 
                                    <% game.platforms.forEach(platform => { %>
                                        <% if (platform!= game.platforms[game.platforms.length-1]) { %>
                                            <%=platform%>/
                                        <% } else{%>
                                            <%=platform%>
                                        <%}%>
                                <% }) %>
                                </p>
                                <p><span>Description:</span> <%=game.prime.description.substring(0, 100)%>...</p>
                            </div>
                        </div>
                    <% }) %>
                </main>
                <aside>
                    <div class="trash_others">
                        <h3>Deleted genres</h3>
                        <div class="trash">
                            <% trash_genres.forEach(element => { %>
                                <div class="trash_row">
                                    <div class="buttons_block">
                                        <img src="/imgs/restore.png" id="<%= element.id %>" obj="genre" alt="" class="restore">
                                        <img src="/imgs/delete.png" id="<%= element.id %>" obj="genre" alt="" class="full_delete">
                                    </div>
                                    <p><%= element.name %> </p>
                                </div>
                               <% }) %>
                        </div>
                    </div>
                    <div class="trash_others">
                        <h3>Deleted platforms</h3>
                        <div class="trash">
                            <% trash_platforms.forEach(element => { %>
                                <div class="trash_row">
                                    <div class="buttons_block">
                                        <img src="/imgs/restore.png" id="<%= element.id %>" obj="platform" alt="" class="restore">
                                        <img src="/imgs/delete.png" id="<%= element.id %>" obj="platform" alt="" class="full_delete">
                                    </div>
                                    <p><%= element.name %> </p>
                                </div>
                               <% }) %>
                        </div>
                    </div>
                </aside>
            </div>
            <footer>
                <%- include('../partials/footer'); %>
            </footer>
        </div>
    </body>
</html>