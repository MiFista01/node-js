<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <div class="wrapper">
            <header>
                <%- include('../partials/header'); %>
            </header>
            <div class="content">
                <%- include('../partials/left_aside'); %>
                <main>
                    <h1>Latest Additions:</h1>
                    <% games.forEach(game => { %>
                        <div class="game">
                            <a href="game/<%=game.prime.id%>">
                                <div class="game_img" style="background-image: url(<%=game.prime.img%>);">
        
                                </div>
                            </a>
                            
                            <div class="info">
                                <h2><%=game.prime.title%></h2>
                                <p><span>Published date: </span><%= game.prime.published_date %></p>
                            </div>
                        </div>
                    <% }) %>
                </main>
            </div>
            <footer>
                <%- include('../partials/footer'); %>
            </footer>
        </div>
    </body>
</html>