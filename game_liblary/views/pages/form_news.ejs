<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
        <script src="scripts/form_news.js"></script>
    </head>
    <body >
        <div class="wrapper">
            <header>
                <%- include('../partials/header'); %>
            </header>
            <main>
                <h1>Form for news</h1>
                <form id="form" method="POST" style="width: 50%;">
                    <input type="text" name="title" placeholder="News Title">
                    <input type="text" name="link" placeholder="News link">
                    <div class="key_worlds">
                        <div>
                            <input type="text" list="key_worlds" id="key_world" placeholder="Add keywrorlds" autocomplete="off">
                            <datalist id="key_worlds">
                                <% worlds.forEach(element => { %>
                                    <option value="<%=element.text%>"></option>
                                <% }) %>
                            </datalist>
                            <p id="add_worlds" class="button">Add key</p>
                        </div>
                        
                        <div class="checkboxes" id="news_worlds">
                            
                        </div>
                    </div>
                    <textarea name="news_text" id="" cols="30" rows="10" placeholder="Text of News"></textarea>
                    <button>create</button>            
                </form>
                
            </main>
            <footer>
                <%- include('../partials/footer'); %>
            </footer>
        </div>
    </body>
</html>