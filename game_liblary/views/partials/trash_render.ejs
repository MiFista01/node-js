<% trash_games.forEach(game => { %>
    <div class="game trashed">
        <% if (user && (user.role == 2 || user.role == 3)) { %>
            <div class="user_btns">
                <img src="/imgs/restore.png" id="<%=game.id %>" obj="game" alt="" class="restore">
                <img src="/imgs/delete.png" id="<%=game.id %>" obj="game" alt="" class="full_delete">
            </div>
        <% } %>
        <div class="game_img" style="background-image: url(<%=game.img%>);"></div>
        
        <div class="info">
            <h2><%=game.title%></h2>
            <p><span>Published date: </span><%= game.published_date %></p>
            <p><span>Issuer: </span><%= game.issuer %></p>
            <p><span>Developer: </span><%= game.developer %></p>
        </div>
    </div>
<% }) %>